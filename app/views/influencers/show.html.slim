- content_for :title do
  = @influencer.name
- content_for :highlight do
  = render partial: 'partials/highlight_home'
section.content.row
  aside.left
    - if can?(:manage, @influencer)
      h3= t "user.show.create_and_edit"
    - else
      h3= @influencer.name
    .image
      = image_tag @influencer.avatar.url
    = form_for @influencer, multipart: true, html: { class: (can?(:edit, @influencer) ? "" : "not_logged") } do |f|
      - if can?(:edit, @influencer)
        p
          = f.file_field :avatar
      p
        = f.label :name
        = f.text_field :name, disabled: :disabled unless can?(:edit, @influencer)
      hr
      - if @influencer.email?
        p
          = f.label :email
          = f.text_field :email, disabled: (can?(:edit, @influencer) ? "" : "disabled")
      - if @influencer.twitter?
        p
          = f.label :twitter
          = f.text_field :twitter , disabled: (can?(:edit, @influencer) ? "" : "disabled")
      - if @influencer.facebook_url?
        p
          = f.label :facebook_url
          = f.text_field :facebook_url, disabled: (can?(:edit, @influencer) ? "" : "disabled")

      hr
      - if can?(:edit, @influencer)
        p.actions
          = f.submit class: "btn submit green", value: t("user.show.save")

  article.right
    .inside
      h2
        |Campanhas onde #{@influencer.name} foi pressionado 
      hr
      .list= render @influencer.campaigns.accepted


