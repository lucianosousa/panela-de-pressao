#campaign
  .detail
    .category
      = @campaign.category.name
    .name  
      h1
        = @campaign.name
    .user
      .name
        = @campaign.user.name
      .timestamp
        = t 'campaign.time.created_at', time: @campaign.created_at.strftime("%d %B %Y")
        = t 'campaign.time.updated_at', time: time_ago_in_words(@campaign.updated_at)
    .image  
      = image_tag @campaign.image.url, alt: @campaign.name, title: @campaign.name
    .text
      p
        = raw @campaign.description.gsub("\n", "<br />")
  .action
    h2 Alvos da campanha
    - @campaign.influencers.each do |influencer|
      = image_tag influencer.avatar
    h2 Como vocÃª deseja pressionar os alvos dessa campanha?
    - if !@campaign.influencers.where("email IS NOT NULL").empty?
      = form_for [@campaign, @poke] do |f|
        = t "email", :count => @campaign.pokes.where(:kind => "email").count
        = f.hidden_field :kind, :value => "email"
        = f.submit "Email"
