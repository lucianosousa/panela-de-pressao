article.left
  h1= t 'campaign.new.header'
  small= t 'campaign.new.small'
  = form_for @campaign do |f|
    .field_row.first
      .label_and_field
        = f.label :name
        .field.name
          .field_bg= f.text_field :name
        .inline-errors= @campaign.errors[:name].join(", ")
    .field_row
      .label_and_field
        = f.label :description
        .field.description
          .field_bg= f.text_area :description
        .inline-errors= @campaign.errors[:description].join(", ")
    .field_row
      .label_and_field
        = f.label :image
        .field
          = f.file_field :image
        .inline-errors= @campaign.errors[:image].join(", ")
        = image_tag @campaign.image if @campaign.persisted?
        = f.hidden_field :image_cache
    .field_row
      .label_and_field
        = f.label :category_id
        .field
          = f.select :category_id, Category.all.map{|c| [c.name, c.id]}, :include_blank => true
        .inline-errors= @campaign.errors[:category].join(", ")
    .field_row
      .label_and_field
        = f.label :email_text
        .field
          .field_bg= f.text_area :email_text
        .inline-errors= @campaign.errors[:email_text].join(", ")
    .field_row
      .label_and_field
        = f.label :facebook_text
        .field
          .field_bg= f.text_area :facebook_text
        .inline-errors= @campaign.errors[:facebook_text].join(", ")
    .field_row
      .label_and_field
        = f.label :twitter_text
        .field
          .field_bg= f.text_field :twitter_text
        small.campaign_twitter_text_status
        .inline-errors= @campaign.errors[:twitter_text].join(", ")
    .field_row.influencers
      .label_and_field
        = f.label :influencer_ids
        .field.influencers
          .field_bg= f.select :influencer_ids, Influencer.all.map{|i| [i, i.id]}, {}, "data-placeholder" => "Escolha os alvos da campanha...", :multiple => true, :class => "chzn-select", :style => "width: 100%;"
      .clear
    .field_row.last
      .action
        = link_to "Cancelar", root_path, class: 'btn gray cancel'
        = f.submit @campaign.new_record? ? "Enviar campanha para moderação" : "Salvar campanha", :class => "btn submit"
aside.right
  .content
    .tip.first
      span= t 'campaign.new.form.tips.title' 
    .tip.text 
      span= t 'campaign.new.form.tips.why_important_html' 
    .tip 
      span= t 'campaign.new.form.tips.image'
    .tip
      span= t 'campaign.new.form.tips.theme' 
    .tip.marked.text
      span= t 'campaign.new.form.tips.email_text'
    .tip.marked.second.text
      span= t 'campaign.new.form.tips.face_text' 
    .tip.marked.text
      span= t 'campaign.new.form.tips.tweet_text'
    .tip.last 
      span= t 'campaign.new.form.tips.targets_html', link: link_to('clique aqui', 'http://bit.ly/SJZBx7')

- if @campaign.persisted? && @current_user.admin? && !@campaign.accepted?
  |  ou 
  = form_for @campaign, :url => campaign_accept_path(@campaign), :method => :put do |f|
    = f.submit "Aceitar campanha", :class => "btn"
  = link_to "Remover campanha", @campaign, :method => :delete, :class => "btn"
